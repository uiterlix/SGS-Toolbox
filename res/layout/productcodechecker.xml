<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:id="@+id/ProductCodeChecker"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical">
	<TextView android:layout_height="wrap_content"
		android:layout_weight="1" android:layout_width="fill_parent"
		android:id="@+id/TextView" 
		android:background="@color/white" android:scrollbars="vertical" android:textColor="@color/black"></TextView>
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/back"
		android:text="@string/back"></Button>
</LinearLayout>
